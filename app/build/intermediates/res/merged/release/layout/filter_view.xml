<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:background="@drawable/header_background_rounded" android:padding="@dimen/padding_5_5_8_10" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:id="@+id/image" android:layout_width="@dimen/image_25_25_40_45" android:layout_height="@dimen/image_25_25_40_45" android:contentDescription="@string/image" />
    <Space android:id="@+id/rightSpace" android:layout_width="@dimen/padding_5_5_8_10" android:layout_height="wrap_content" android:layout_toRightOf="@id/image" />

    <TextView android:id="@+id/name" android:text="@string/title"
        android:textSize="@dimen/text" android:textColor="@color/title" android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rightSpace" />

    <!--<TextView android:id="@+id/description" android:text="@string/summary"
        android:textSize="@dimen/mini" android:textColor="@color/grey_light" android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rightSpace" android:layout_below="@id/name" />-->

    <Space android:id="@+id/space" android:layout_width="fill_parent" android:layout_height="@dimen/space_15_15_20_25"
        android:layout_toRightOf="@id/rightSpace" android:layout_below="@id/description" />

    <TextView android:id="@+id/filterText" android:text="@string/filterTxt"  android:textSize="@dimen/mini"
        android:textColor="@color/grey_light" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rightSpace" android:layout_below="@id/space" />

    <TextView android:id="@+id/filterType" android:text="@string/filterType"  android:textSize="@dimen/mini"
        android:textColor="@color/grey_light" android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rightSpace" android:layout_below="@id/filterText" />

</RelativeLayout>