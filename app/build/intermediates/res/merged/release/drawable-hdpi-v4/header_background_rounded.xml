<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="@color/transparent" />
            <corners android:radius="@dimen/padding_5_5_10_10" />
            <gradient android:startColor="@color/darker" android:endColor="@color/blue" android:angle="90.0" android:centerColor="@color/transparent_special" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="@color/transparent" />
            <corners android:radius="@dimen/padding_5_5_10_10" />
            <gradient android:startColor="@color/darker" android:endColor="@color/blue" android:angle="90.0" android:centerColor="@color/transparent_special" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1.0dip" android:color="@color/transparent" />
            <corners android:radius="@dimen/padding_5_5_10_10" />
            <gradient android:startColor="@color/darker" android:endColor="@color/blue" android:angle="90.0" />
        </shape>
    </item>
</selector>