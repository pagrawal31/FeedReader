<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="@color/button_border_pressed" />
            <gradient android:startColor="@color/button_startColor_pressed" android:endColor="@color/button_endColor_pressed" android:angle="90.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="@color/button_border_pressed" />
            <gradient android:startColor="@color/button_startColor_pressed" android:endColor="@color/button_endColor_pressed" android:angle="90.0" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="@color/button_border_inactive" />
            <gradient android:startColor="@color/button_startColor_inactive" android:endColor="@color/button_endColor_inactive" android:angle="90.0" />
        </shape>
    </item>
</selector>